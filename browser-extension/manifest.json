{
  "manifest_version": 3,
  "name": "Stash",
  "version": "1.0.0",
  "description": "Save bookmarks and notes to your personal stash",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Stash"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open Stash popup"
    }
  }
}