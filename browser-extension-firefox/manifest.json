{
  "manifest_version": 2,
  "name": "Stash",
  "version": "1.0.0",
  "description": "Save bookmarks and notes to your personal stash",
  
  "permissions": [
    "activeTab",
    "storage"
  ],

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Save to Stash",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "stash@example.com",
      "strict_min_version": "57.0"
    }
  }
}